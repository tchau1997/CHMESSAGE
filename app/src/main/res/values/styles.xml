<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLoginPrimary</item>
        <item name="colorPrimaryDark">@color/colorLoginPrimaryDark</item>
        <item name="colorAccent">@color/colorLoginAccent</item>
    </style>

    <style name="InboxTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLoginPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorLoginAccent</item>
        <item name="colorAccent">@color/colorLoginAccent</item>
    </style>

    <style name="ChatTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLoginPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorLoginAccent</item>
        <item name="colorAccent">@color/colorLoginAccent</item>
    </style>

</resources>
